<main>
  <% flash.each do |message_type, message| %>
    <%= message %>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render partial: 'layouts/sidebar', locals:{ user: @user, newbook: @newbook } %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
                <%= "#{@user.name}" %>
                <%end%>
              </td>
              <td><p class = "book-title"><%= link_to "#{@book.title}",book_path(@book.id) %></p></td>
              <td><%= @book.body%></td>
              <% if @book.user_id == current_user.id %>
    				  <td>
    				  	<%= link_to edit_book_path do %>
    				  	<button type="button" class="btn btn-success btn-sm">Edit</button>
    				  	<%end%>
    				  </td>
    				  <td>
    					  <%= link_to book_path, method: :delete, data: { confirm: '削除しますか？' } do %>
    					  <button type="button" class="btn btn-danger btn-sm">Destroy</button>
    				  	<%end%>
    				  </td>
    					<% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>