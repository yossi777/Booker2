<% flash.each do |message_type, message| %>
    <%= message %>
<% end %>

<h1>Editing Book</h1>
<%if @book.errors.any? %>
<h3><%="#{@book.errors.full_messages.count} errors prohibited this obj being saved:" %></h3>
<%end%>

<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>

<%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br><%= f.submit 'Update Book' %>
<% end %>

<td><%= link_to "Show", book_path(@book.id) %><td>
|
<a href = "/books">Back</a>